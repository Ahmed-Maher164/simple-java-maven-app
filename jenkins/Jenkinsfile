pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo hi'
                sh 'ls'
            }
        }
        stage('Test') {
            steps {
                sh 'echo testing'
            }
            post {
                always {
                    sh 'echo results'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh 'echo sending'
            }
        }
    }
}
